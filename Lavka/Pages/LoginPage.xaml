<Page x:Class="Lavka.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lavka.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="356,96,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" />
        <TextBox x:Name="LoginTb" HorizontalAlignment="Left" Margin="325,117,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" />
        <TextBlock HorizontalAlignment="Left" Margin="351,140,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top"/>
        <TextBox x:Name="PasswordTb" HorizontalAlignment="Left" Margin="321,161,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button x:Name="LoginBtn" Content="Войти" HorizontalAlignment="Left" Margin="353,184,0,0" VerticalAlignment="Top" Click="LoginBtn_Click"/>
        <Button x:Name="RegBtn" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="314,210,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.893,-1.328" Click="RegBtn_Click"/>

    </Grid>
</Page>
